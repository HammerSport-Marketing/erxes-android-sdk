<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- solids that simulate shadow_old !-->
    <item android:top="0dp" android:right="1dp" android:bottom="1dp" android:left="1dp">
        <shape>
            <corners android:radius="@dimen/radius_corner"></corners>
            <solid android:color="#10ffffff" />

        </shape>
    </item>

    <item android:top="0dp" android:right="1dp" android:bottom="1dp" android:left="1dp">
        <shape>
            <corners android:radius="@dimen/radius_corner"></corners>
            <solid android:color="#20ffffff" />

        </shape>
    </item>

    <item android:top="0dp" android:right="1dp" android:bottom="1dp" android:left="1dp">
        <shape>
            <corners android:radius="@dimen/radius_corner"></corners>
            <solid android:color="#40ffffff" />

        </shape>
    </item>

    <item android:top="0dp" android:right="1dp" android:bottom="1dp" android:left="1dp" >
        <shape>
            <corners android:radius="@dimen/radius_corner"></corners>
            <solid android:color="#50ffffff" />
        </shape>
    </item>

    <item android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp">
        <shape>
            <corners android:radius="@dimen/radius_corner"></corners>
            <solid android:color="#60ffffff" />
            <padding  />
        </shape>
    </item>

    <!-- main background !-->
    <item>
        <shape>
            <corners android:radius="@dimen/radius_corner"></corners>
            <solid android:color="#5629B6" />
        </shape>
    </item>


</layer-list>