<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_message_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/avatar"
        android:layout_marginLeft="8dp"
        app:civ_border_width="1dp"
        app:civ_border_color="#000000"
        app:civ_circle_background_color="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/text_message_body"/>
    <TextView
        android:layout_marginLeft="8dp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/rounded_rectangle_orange"
        android:id="@+id/text_message_body"
        android:text="hi man, how are you?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:textColor="#444"
        app:layout_constraintLeft_toRightOf="@+id/image_message_profile"
         />


    <TextView
        android:id="@+id/text_message_time"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#AAAEB3"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/text_message_body"
        app:layout_constraintTop_toBottomOf="@+id/text_message_body" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fileview"
        app:cardCornerRadius="15dp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        android:shape="oval"
        app:layout_constraintStart_toStartOf="@+id/text_message_time"
        app:layout_constraintTop_toBottomOf="@+id/text_message_time"
        android:thicknessRatio="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_input"
                android:layout_margin="5dp"
                android:layout_width="200dp"
                android:maxWidth="200dp"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                />

            <TextView
                android:id="@+id/filename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:paddingRight="5dp"
                android:layout_gravity="center_vertical"
                android:text="ok"
                android:textColor="#444"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>